{
  "name": "@factiii/stack",
  "version": "2.0.1-d3",
  "description": "Infrastructure management package for deploying services to servers",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "factiii": "./bin/factiii"
  },
  "files": [
    "bin/",
    "dist/",
    "templates/",
    "scripts/"
  ],
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "copy-assets": "cp src/plugins/approved.json dist/plugins/ && mkdir -p dist/plugins/pipelines/factiii/workflows && cp src/plugins/pipelines/factiii/workflows/*.yml dist/plugins/pipelines/factiii/workflows/",
    "prebuild": "npm run clean",
    "prepublish-check": "node -e \"const v=require('./package.json').version; if(v.includes('-d')){console.error('âŒ Cannot publish dev version:',v); process.exit(1)}\"",
    "prepublishOnly": "npm run prepublish-check && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "infrastructure",
    "deployment",
    "docker",
    "nginx"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@octokit/rest": "^20.0.2",
    "commander": "^11.1.0",
    "js-yaml": "^4.1.1",
    "libsodium-wrappers": "^0.7.11"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.0.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/test/**/*.test.ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
