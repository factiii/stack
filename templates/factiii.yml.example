# Factiii Configuration
# Replace all EXAMPLE- values with your actual settings.
# See STANDARDS.md for detailed documentation.

# Basic Info
name: EXAMPLE-yourapp
github_repo: EXAMPLE-yourorg/yourapp
ssl_email: EXAMPLE-admin@yourdomain.com

# AWS Configuration (non-sensitive)
aws:
  access_key_id: EXAMPLE-AKIAXXXXXXXXXXXXXXXX
  region: us-east-1

# Plugins
plugins:
  secrets: github
  registry: ecr

# Servers
servers:
  mac-mini:
    plugin: mac-mini
  # aws-ec2-prod:
  #   plugin: aws-ec2
  #   region: us-east-1

# Environments
environments:
  staging:
    server: mac-mini
    domain: EXAMPLE-staging.yourapp.com
    host: EXAMPLE-192.168.1.100
    env_file: .env.staging
    
  # production:
  #   server: aws-ec2-prod
  #   domain: EXAMPLE-yourapp.com
  #   host: EXAMPLE-prod.yourapp.com
  #   env_file: .env.prod

# ECR Configuration
ecr_registry: EXAMPLE-123456789.dkr.ecr.us-east-1.amazonaws.com
ecr_repository: EXAMPLE-yourapp

# ============================================================================
# GitHub Secrets Setup
# ============================================================================
# Run `npx factiii init fix` to configure these secrets interactively.
#
# Required secrets (sensitive values only):
#   - STAGING_SSH           SSH private key for staging
#   - PROD_SSH              SSH private key for production  
#   - AWS_SECRET_ACCESS_KEY AWS secret key
#
# Optional secrets:
#   - STAGING_ENVS          Staging environment variables
#   - PROD_ENVS             Production environment variables
#
# Non-secrets (configured above):
#   - Host addresses (environments.{env}.host)
#   - AWS access key ID (aws.access_key_id)
#   - AWS region (aws.region)
#   - SSH user (auto-detected in factiiiAuto.yml, defaults to ubuntu)
