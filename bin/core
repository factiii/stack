#!/usr/bin/env node

const { program } = require('commander');
const path = require('path');

// Import CLI commands
const init = require('../src/cli/init');
const validate = require('../src/cli/validate');
const checkConfig = require('../src/cli/check-config');
const deploy = require('../src/cli/deploy');
const remove = require('../src/cli/remove');
const generateWorkflows = require('../src/cli/generate-workflows');

program
  .name('core')
  .description('Infrastructure management CLI')
  .version('1.0.0');

program
  .command('init')
  .description('Initialize infrastructure.yml config file')
  .option('-f, --force', 'Overwrite existing config file')
  .action((options) => {
    init(options);
  });

program
  .command('validate')
  .description('Validate infrastructure.yml config file')
  .option('-c, --config <path>', 'Path to config file', 'infrastructure.yml')
  .action((options) => {
    validate(options);
  });

program
  .command('check-config')
  .description('Check and regenerate configs on servers, verify GitHub secrets, provide report')
  .option('-e, --environment <env>', 'Environment (staging|prod|all)', 'all')
  .option('--ssh-staging <key>', 'SSH key for staging server')
  .option('--ssh-prod <key>', 'SSH key for production server')
  .option('--staging-host <host>', 'Staging server host')
  .option('--staging-user <user>', 'Staging server user')
  .option('--prod-host <host>', 'Production server host')
  .option('--prod-user <user>', 'Production server user')
  .action((options) => {
    checkConfig(options);
  });

program
  .command('deploy')
  .description('Deploy/update config to servers')
  .option('-c, --config <path>', 'Path to config file', 'infrastructure.yml')
  .option('-e, --environment <env>', 'Environment (staging|prod|all)', 'all')
  .option('--ssh-staging <key>', 'SSH key for staging server')
  .option('--ssh-prod <key>', 'SSH key for production server')
  .option('--staging-host <host>', 'Staging server host')
  .option('--staging-user <user>', 'Staging server user')
  .option('--prod-host <host>', 'Production server host')
  .option('--prod-user <user>', 'Production server user')
  .action((options) => {
    deploy(options);
  });

program
  .command('remove')
  .description('Remove config from servers and clean up')
  .option('-c, --config <path>', 'Path to config file', 'infrastructure.yml')
  .option('--repo <name>', 'Repository name (if not using config file)')
  .option('-e, --environment <env>', 'Environment (staging|prod|all)', 'all')
  .option('--ssh-staging <key>', 'SSH key for staging server')
  .option('--ssh-prod <key>', 'SSH key for production server')
  .option('--staging-host <host>', 'Staging server host')
  .option('--staging-user <user>', 'Staging server user')
  .option('--prod-host <host>', 'Production server host')
  .option('--prod-user <user>', 'Production server user')
  .action((options) => {
    remove(options);
  });

program
  .command('generate-workflows')
  .description('Generate GitHub workflow files')
  .option('-o, --output <dir>', 'Output directory', '.github/workflows')
  .action((options) => {
    generateWorkflows(options);
  });

program.parse();


