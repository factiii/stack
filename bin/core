#!/usr/bin/env node

const { program } = require('commander');
const path = require('path');

// Import CLI commands
const init = require('../src/cli/init');
const validate = require('../src/cli/validate');
const checkConfig = require('../src/cli/check-config');
const deploy = require('../src/cli/deploy');
const undeploy = require('../src/cli/undeploy');
const generateWorkflows = require('../src/cli/generate-workflows');
const secrets = require('../src/cli/secrets');

program
  .name('core')
  .description('Infrastructure management CLI')
  .version('1.0.0');

// Create init as a command with subcommands
const initCommand = program
  .command('init')
  .description('Initialize and fix infrastructure setup');

initCommand
  .command('fix')
  .description('Fix all environments including uploading secrets to GitHub')
  .option('--token <token>', 'GitHub token (or set GITHUB_TOKEN env var)')
  .option('--continue-on-error', 'Continue even if some secrets fail to upload')
  .action(async (options) => {
    console.log('ðŸš¨ BIN/CORE: init fix command matched!', options);
    const initFix = require('../src/cli/init-fix');
    await initFix(options);
  });

// Default init action (when no subcommand provided)
initCommand
  .option('-f, --force', 'Overwrite existing config file')
  .option('--no-remote', 'Skip auto-triggering the init workflow')
  .option('--token <token>', 'GitHub token (or set GITHUB_TOKEN env var)')
  .action(async (options, command) => {
    // If a subcommand was used, don't run this
    if (command.args.length > 0) return;
    await init(options);
  });

program
  .command('validate')
  .description('Validate core.yml config file')
  .option('-c, --config <path>', 'Path to config file', 'core.yml')
  .action((options) => {
    validate(options);
  });

program
  .command('check-config')
  .description('Check and regenerate configs on servers, verify GitHub secrets, provide report')
  .option('-e, --environment <env>', 'Environment (staging|prod|all)', 'all')
  .option('--ssh-staging <key>', 'SSH key for staging server')
  .option('--ssh-prod <key>', 'SSH key for production server')
  .option('--staging-host <host>', 'Staging server host')
  .option('--staging-user <user>', 'Staging server user')
  .option('--prod-host <host>', 'Production server host')
  .option('--prod-user <user>', 'Production server user')
  .action((options) => {
    checkConfig(options);
  });

program
  .command('deploy')
  .description('Validate local config and trigger GitHub deploy workflow')
  .option('-c, --config <path>', 'Path to config file', 'core.yml')
  .option('-e, --environment <env>', 'Environment (staging|prod|all)', 'all')
  .option('-b, --branch <branch>', 'Branch to deploy from (defaults to "main")')
  .option('--token <token>', 'GitHub token (or set GITHUB_TOKEN env var)')
  .action(async (options) => {
    await deploy(options);
  });

program
  .command('undeploy')
  .description('Completely remove repo from staging and prod servers (deletes configs, env files, and all data)')
  .option('-c, --config <path>', 'Path to config file', 'core.yml')
  .option('--repo <name>', 'Repository name (if not using config file)')
  .option('-e, --environment <env>', 'Environment (staging|prod|all)', 'all')
  .option('--ssh-staging <key>', 'SSH key for staging server')
  .option('--ssh-prod <key>', 'SSH key for production server')
  .option('--staging-host <host>', 'Staging server host')
  .option('--staging-user <user>', 'Staging server user')
  .option('--prod-host <host>', 'Production server host')
  .option('--prod-user <user>', 'Production server user')
  .action((options) => {
    undeploy(options);
  });

program
  .command('generate-workflows')
  .description('Generate GitHub workflow files')
  .option('-o, --output <dir>', 'Output directory', '.github/workflows')
  .action((options) => {
    generateWorkflows(options);
  });

program
  .command('secrets [names...]')
  .description('Manage GitHub secrets (SSH keys, AWS credentials, env vars)')
  .option('--value <value>', 'Secret value (for scripting, use with single secret name)')
  .option('--no-deploy', 'Skip deployment prompt after uploading')
  .option('--token <token>', 'GitHub token (or use GITHUB_TOKEN env var)')
  .action(async (names, options) => {
    await secrets(names, options);
  });

program.parse();


